<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title U de M</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >

    <div class="navbar navbar-expand-lg navbar-dark fixed-top bg-info">
        <div class="container">
            <div class="navbar-header">
                @{
                    if (Session["Alumno"] == null && Session["Maestro"] == null)
                    {
                        @Html.ActionLink("UdeM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else if (Session["Maestro"] != null)
                    {

                        @Html.ActionLink("UdeM", "Index", "Maestro", new { area = "" }, new { @class = "navbar-brand" })

                    }
                    else
                    {
                        @Html.ActionLink("UdeM", "Index", "Alumno", new { area = "" }, new { @class = "navbar-brand" })
                    }
                }

            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse nav justify-content-end " id="navbarNav">
                <ul class="navbar-nav">


                    <li class="nav-item">
                        @{
                            if (Session["Alumno"] == null && Session["Maestro"] == null)
                            {

                            }
                            else if (Session["Maestro"] != null)
                            {
                            <li class="nav-item">
                                @Html.ActionLink("Logout", "Logout", "Maestro", new { area = "" }, new { @class = "navbar-brand" })
                            </li>
                            }
                            else
                             {
                                <li class="nav-item">
                                    @Html.ActionLink("Historial", "Historial", "Alumno", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Logout", "Logout", "Alumno", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                            }
                        }
                    </ul>
            </div>
        </div>
    </div>
    <br />
    <div class="container body-content">
            @RenderBody()     
        <hr />
        <footer>
            <p>UdeM &copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
